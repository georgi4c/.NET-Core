@model PartPageListingModel

@{
    ViewData["Title"] = "All Parts";
}

<h2>
    @ViewData["Title"]
    <a class="btn btn-primary" href="/parts/create"></a>
</h2>

<ul class="pagination">
    <li><a href="/parts/all?page=@(Model.PreviousPage)">Previous</a></li>
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <li class="page-item @(Model.CurrentPage == i ? "active" : string.Empty)"><a href="/parts/all?page=@i">@i</a></li>
    }
    <li><a href="/parts/all?page=@(Model.NextPage)">Next</a></li>
</ul>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th>
                Supplier
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var part in Model.Parts)
        {
            <tr>
                <td>
                    @part.Name
                </td>
                <td>
                    @part.Price.ToString("F2")
                </td>
                <td>
                    @part.Quantity
                </td>
                <td>
                    @part.SupplierName
                </td>
            </tr>
        }
    </tbody>
</table>

